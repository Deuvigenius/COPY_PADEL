<div class="container">
<h1>Voici les Centres de Padel à proximité</h1>
  <div class="container-center">
    <% @padel_centers.each do |padel_center|  %>
    <div class="card" style="width: 22rem; height: 25rem;">
      <% if padel_center.photo.attached? %>
        <%= cl_image_tag padel_center.photo.key, class:"card-img-top" %>
      <% else %>
      <img src="https://images.unsplash.com/photo-1666114060991-c1a4b1b6fb5b?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8N3x8cGFkZWx8ZW58MHx8MHx8fDA%3D" alt="Padel center">
      <% end %>
      <div class="card-body">
        <h5 class="card-title"><%= padel_center.name %> || <%= padel_center.number_of_court %> 2 </h5>
        <p class="card-text"><%= padel_center.address %></p>
        <%= link_to "Voir l'établissement", padel_center_path(padel_center), class:"btn btn-primary"%>
      </div>
    </div>
    <% end %>
  </div>
</div>
  
  
