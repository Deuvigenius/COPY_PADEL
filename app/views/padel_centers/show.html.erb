<div class="container mt-3">
  <%= link_to "Retour", padel_centers_path, class:"btn btn-primary"%>
</div>

<div class="container text-center">
  <h1><%= @padel_center.name %></h1>
  <div>
    <% if @padel_center.photo.attached? %>
      <%= cl_image_tag @padel_center.photo.key %>
    <% else %>
      <img src="https://images.unsplash.com/photo-1666114060991-c1a4b1b6fb5b?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8N3x8cGFkZWx8ZW58MHx8MHx8fDA%3D" alt="Padel center">
    <% end %>
  </div>
  <div>
    <p>Adresse: <%= @padel_center.address %></p>
    <p>Nombre de terrains dans le complexe: <%= @padel_center.number_of_court %></p>
  </div>

  <div class="container-court mt-5">
    <%= @padel_courts.each do |padel_court| %>
      <div class="card-product-court">
        <% if padel_court.photo.attached? %>
          <%= cl_image_tag padel_court.photo.key %>
        <% else %>
          <img src="https://images.unsplash.com/photo-1666114060991-c1a4b1b6fb5b?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8N3x8cGFkZWx8ZW58MHx8MHx8fDA%3D" alt="Padel center">
        <% end %>   
        <div class="container-court-rent">
          <div class="card-product-infos-court">
            <h2>Court N°<%= padel_court.number %></h2>
            <p>Description: <%= padel_court.content %></p>
          </div>
          <div>
            <p>Réserver une partie: </p>
            <div data-controller="toggle" class="mt-5">
              <button class="btn btn-outline-primary">Add a new monument</button>
              <%= render "form", rent: @rent %>
            </div>
          </div>
        </div>   
        </div>
      </div>
    <% end %>
  </div>
</div>